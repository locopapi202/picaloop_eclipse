<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.picaloopand.picaloop.WelcomeActivity" >

    <Button
        android:id="@+id/fbLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="151dp"
        android:text="@string/fbLogin_button" />

    <Button
        android:id="@+id/gmailLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fbLoginButton"
        android:layout_alignTop="@+id/fbLoginButton"
        android:layout_marginTop="70dp"
        android:text="@string/gmailLogin_button" />

    <Button
        android:id="@+id/pclLoginbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gmailLoginButton"
        android:layout_below="@+id/gmailLoginButton"
        android:layout_marginTop="24dp"
        android:text="@string/pclLogin_button" />

</RelativeLayout> 