<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/loop_image"
        android:layout_width="105dp"
        android:layout_height="66dp"
        android:alpha="0.7"
        android:gravity="center"
        android:src="@drawable/bar_wine" />

    <ImageView
        android:id="@+id/loop_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        android:layout_centerVertical="false"
        android:gravity="top"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/loop_info"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/loop_image"
        android:layout_alignParentLeft="true"
        android:alpha="0.7"
        android:background="@color/black"
        android:gravity="bottom"
        android:textColor="@color/picaloopgreen"
        android:textColorHint="@color/opaque_red"
        android:textSize="10sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/loop_rating1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/loop_image"
        android:layout_alignRight="@+id/loop_image"
        android:gravity="bottom"
        android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/loop_rating2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/loop_image"
                    android:layout_toLeftOf="@+id/loop_rating1"
                    android:gravity="bottom"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/loop_rating3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/loop_rating2"
                    android:layout_toLeftOf="@+id/loop_rating2"
                    android:gravity="bottom"
                    android:scaleType="centerInside" />

                <ImageView
                    android:id="@+id/loop_rating4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/loop_image"
                    android:layout_toLeftOf="@+id/loop_rating3"
                    android:gravity="bottom"
                    android:scaleType="centerInside" />

</RelativeLayout>